{
  "name": "x-marketing-backend",
  "version": "1.0.0",
  "description": "Backend API for X Marketing Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "jest __tests__/e2e",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:load": "artillery run load-test.yml",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "health:check": "curl -f http://localhost:3001/health/ready || exit 1",
    "metrics:export": "curl http://localhost:3001/metrics/prometheus",
    "test:hardening": "node test-hardened-backend.js"
  },
